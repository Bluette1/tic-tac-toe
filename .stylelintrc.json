{
    "extends": ["stylelint-config-standard"],
    "plugins": ["stylelint-scss"],
    "rules": {
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js", ".jsx", ".ts", ".tsx"]
        }
      }
    },
    "ignoreFiles": [
      "build/**",
      "dist/**",
      "**/reset*.css",
      "**/bootstrap*.css"
    ]
  }
